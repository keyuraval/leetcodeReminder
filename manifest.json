{
    "manifest_version": 1,
    "name": "LeetCodeReminder",
    "description": "Make sure you are reminded of question of the day for leetcode",
    "version": "1.0",
    "action": {
      "default_popup": "pop-up.html",
      "default_icon": {
        "16": "images/1.png",
        "48": "images/2.png",
        "128": "images/3.png"
      }
    },
    "permissions": [
      "background"
    ],
    "host_permissions": [
      "https://leetcode.com/*"
    ],
    
    "background": {
      "service_worker": "background.js"
    }
  }